<script>
				 $('.price-change').each(function() {
  if (parseFloat($(this).text()) < -0.1) {
    $(this).addClass('negative');
  } else if (parseFloat($(this).text()) >= 0.1) {
    $(this).addClass('positive');
  };
});
</script>
